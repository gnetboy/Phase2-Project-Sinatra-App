<h1>Add a new Favorite to your list</h1>
<form method="POST" action="/favorites">
  <div class="form-group">
    <label for="description">Description *</label>
    <input type="text" class="form-control" id="description" name="description" required>
  </div>
  
  <div class="form-group">
  <strong><u>Categories (Please select all that apply)</u></strong>:<br>
    <% @categories.each do |c| %>
    <div class="form-check">
      <label class="form-check-label">
        <input class="form-check-input" type="checkbox" name="category[category_ids][]" value="<%=c.id%>">
          <%=c.name%>
        </input>
      </label>
    </div>
    <% end %>
  </div>
  <div class="form-group">
    <p><u>or create a new category:</u></p>
    <label for="categoryname">Category Name:</label>
    <input type="text" class="form-control" id="categoryname" name="category[name]">
  </div>
  <br><br>
  <button type="submit" class="btn btn-primary" style="margin-bottom: 20px">Add To my List</button>
</form>